{
  "include": [
    "packages/mysql/src/global.d.ts",
    "packages/*/src/**/*.ts",
    "packages/*/__test__/**/*.ts",
    "playground/*/src/**/*.ts",
    "playground/*/__test__/**/*.ts",
    "packages/mysql/src/database.ts",
    "packages/mysql/src/join-table.tss",
    "packages/mysql/src/table.ts",
    "playground/mysql/.mysql/global.d.ts",
    "playground/mysql/mysql.config.*",
    "packages/mysql/__test__/join-table.spec.tss"
  ],
  "exclude": [],
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "dist",
    "sourceMap": false,
    "noEmit": true,
    "paths": {
      "@dlovely/mysql": ["packages/mysql/src"],
      "@dlovely/sql-editor": ["./packages/sql-editor/src"],
      "@dlovely/utils": ["./packages/utils/src"]
    },

    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": false,
    "skipLibCheck": true,

    "noUnusedLocals": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": false,
    "strict": true,
    "isolatedModules": true,

    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "types": ["vitest", "node", "vitest/globals"]
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "moduleResolution": "node"
    }
  }
}
